#!/bin/bash
# Reload theme settings for niri

# Export environment variables
export XCURSOR_THEME="Oxygen 17 Black"
export XCURSOR_SIZE=24
export GTK_THEME="nothing"

# Reload GTK settings
gsettings set org.gnome.desktop.interface gtk-theme "nothing"
gsettings set org.gnome.desktop.interface cursor-theme "Oxygen 17 Black"
gsettings set org.gnome.desktop.interface cursor-size 24

# For applications that may be running
killall -HUP gsettingsd 2>/dev/null || true

echo "Theme settings reloaded:"
echo "- Theme: nothing (minimal/transparent)"
echo "- Cursor: Oxygen 17 Black"
echo ""
echo "You may need to restart niri or applications for full effect."
